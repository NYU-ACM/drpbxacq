# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# User Stuff
GET    /					controllers.Application.index

POST   /user				controllers.Application.login

GET    /user/create			controllers.Application.create

POST   /user/save			controllers.Application.save

GET    /user/logout			controllers.Application.logout

GET    /user		        controllers.Application.user

GET    /user/authenticate	controllers.Application.validateLogin(email: String, hash: String)

GET	   /user/transfer		controllers.Application.transfer

# Entry Stuff

GET	   /entry/:path			controllers.Transfer.entry(path: String)

POST /transfer 				controllers.Transfer.transfer	

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file               	       controllers.Assets.at(path="/public", file)
