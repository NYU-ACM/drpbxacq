# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Donor Routes
GET    	/					controllers.Donor.index

POST   	/user				controllers.Donor.login

GET    	/user/create		controllers.Donor.create

POST   	/user/save			controllers.Donor.save

GET    	/user/logout		controllers.Donor.logout

GET    	/user		        controllers.Donor.user

GET    	/user/authenticate	controllers.Donor.validateLogin(email: String, hash: String)

GET	   	/user/transfer		controllers.Donor.transfer

# Admin Routes
GET		/admin				controllers.Admin.index

POST	/admin 				controllers.Admin.login

GET    	/admin/authenticate	controllers.Admin.validateLogin(email: String, hash: String)

GET     /admin/home 		controllers.Admin.home

GET   	/admin/insert		controllers.Admin.insert

GET    	/admin/logout		controllers.Admin.logout

GET		/admin/transfer/:uuid  	controllers.Admin.transfer(uuid: String)	

GET		/admin/approve/:uuid	controllers.Admin.approve(uuid: String)

GET		/admin/cancel/:uuid		controllers.Admin.cancel(uuid: String)

# Transfer Routes

GET	   	/entry/:path		controllers.Transfer.entry(path: String)

GET		/transfer/:uuid		controllers.Transfer.show(uuid: String)

POST /transfer 				controllers.Transfer.transfer	

# Map static resources from the /public folder to the /assets URL path

GET     /assets/*file       controllers.Assets.at(path="/public", file)
